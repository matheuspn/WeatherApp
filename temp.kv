<ScreenManagement>:
    MainScreen:
        id: main
    InfoScreen:
        id: info

# Custom TextInput
<CustText@MDTextField>:
    font_size: "16sp"
    size_hint: 1, 0.30
    pos_hint: {"center_y": 0.5 }
    multiline: False

<MainScreen>:
    name: 'main'
    show: show

    MDBoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: "WeatherApp"
            md_bg_color: app.theme_cls.primary_dark
        
        MDBoxLayout:
            padding: "15dp"
            MDLabel:
                halign: "center"
                text: "Country"
            CustText:
                id: country
                hint_text: "Country"
        MDBoxLayout:
            padding: "15dp"
            MDLabel:
                halign: "center"
                text: "City"
            CustText:
                id: city
                hint_text: "City"
        MDBoxLayout:
            padding: "15dp"
            MDLabel:
                halign: "center"
                id: show
                text: " "
                
            MDRaisedButton:
                md_bg_color: app.theme_cls.primary_dark
                size_hint: 0.35, None
                height: "45dp"
                pos_hint: {"center_y": 0.5, "center_x": 0.5 }
                text: "Search"
                on_press: root.search_button(country.text, city.text)
        MDBoxLayout:
            orientation: 'horizontal'
            padding: "15dp"
            
            Widget:

            MDRaisedButton:
                md_bg_color: app.theme_cls.primary_dark
                size_hint: 0.35, None
                height: "45dp"
                pos_hint: {"center_y": 0.5, "center_x": 0.5 }
                text: "More info >>"
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'info'

<InfoScreen>:
    name: 'info'
    desc_image: desc_image
    description: description

    MDBoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: "WeatherApp"
            md_bg_color: app.theme_cls.primary_dark

        MDBoxLayout:
            AsyncImage:
                id: desc_image
                source: "images/description_img.png"
                size: self.texture_size
            MDLabel:
                halign: "center"
                id: description
                text: " "
        MDBoxLayout:
            MDBoxLayout:
                MDLabel:
                    halign: "center"
                    text: "Min"
                MDLabel:
                    halign: "center"
                    id: min_temp
                    text: " "
            MDBoxLayout:
                MDLabel:
                    halign: "center"
                    text: "Max"
                MDLabel:
                    halign: "center"
                    id: max_temp
                    text: " "
        MDBoxLayout:
            padding: "15dp"
            MDRaisedButton:
                md_bg_color: app.theme_cls.primary_dark
                text: "  <<  "
                height: "45dp"
                size_hint: 0.35, None
                pos_hint: {"center_x": 0.5 ,"center_y": 0.5 }
                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'main'
            
            Widget:
