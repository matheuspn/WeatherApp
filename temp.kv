<ScreenManagement>:
    MainScreen:
        id: main
    InfoScreen:
        id: info

# Custom TextUnput
<CustText@TextInput>:
    font_size: 16
    size_hint: (1, 0.30)
    pos_hint: {"center_y": 0.5 }
    multiline: False

<MainScreen>:
    name: 'main'
    show: show
    GridLayout:
        rows: 4
        padding: 2.5
        canvas.before:
            Color:
                rgba: [0.15, 0.15, 0.15, 1]
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            Label:
                color: [1, 1, 1, 1]
                text: "Country"
            CustText:
                id: country
                multiline: False
        BoxLayout:
            Label:
                color: [1, 1, 1, 1]
                text: "City"
            CustText:
                id: city
                multiline: False
        BoxLayout:
            Label:
                id: show
                color: [1, 1, 1, 1]
                text: " "
            Button:
                size_hint: (1, 0.35)
                pos_hint: {"center_x": 0.5 ,"center_y": 0.5 }
                text: "Search"
                on_press: root.search_button(country.text, city.text)
        GridLayout:
            cols: 2
            BoxLayout:
                Label:
                    text: ""
            BoxLayout:
                Button:
                    size_hint: (1, 0.35)
                    pos_hint: {"center_x": 0.5 ,"center_y": 0.5 }
                    text: "More info >>"
                    on_press:
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'info'

<InfoScreen>:
    name: 'info'
    desc_image: desc_image
    description: description
    GridLayout:
        rows: 4
        padding: 2.5
        canvas.before:
            Color:
                rgba: [0.15, 0.15, 0.15, 1]
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            AsyncImage:
                id: desc_image
                source: "images/description_img.png"
                size: self.texture_size
            Label:
                id: description
                color: [1, 1, 1, 1]
                text: " "
        BoxLayout:
            BoxLayout:
                Label:
                    text: "Min"
                Label:
                    id: min_temp
                    text: " "
            BoxLayout:
                Label:
                    text: "Max"
                Label:
                    id: max_temp
                    text: " "
        BoxLayout:
            Button:
                text: "  <<  "
                size_hint: (1, 0.35)
                pos_hint: {"center_x": 0.5 ,"center_y": 0.5 }
                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'main'
            Label:
                text: " "
