<ScreenManagement>:
    MainScreen:
        id: main
    InfoScreen:
        id: info

# Custom TextInput
<CustText@MDTextField>:
    font_size: "16sp"
    size_hint: (1, 0.30)
    pos_hint: {"center_y": 0.5 }
    multiline: False

<MainScreen>:
    name: 'main'
    show: show
    MDGridLayout:
        rows: 4
        padding: 2.5
        MDBoxLayout:
            MDLabel:
                halign: "center"
                text: "Country"
            CustText:
                id: country
                hint_text: "Country"
        MDBoxLayout:
            MDLabel:
                halign: "center"
                text: "City"
            CustText:
                id: city
                hint_text: "City"
        MDBoxLayout:
            MDLabel:
                halign: "center"
                id: show
                text: " "
            MDRaisedButton:
                md_bg_color: app.theme_cls.primary_dark
                size_hint: (1, 0.35)
                pos_hint: {"center_x": 0.5 ,"center_y": 0.5 }
                text: "Search"
                on_press: root.search_button(country.text, city.text)
        MDGridLayout:
            cols: 2
            MDBoxLayout:
                MDLabel:
                    halign: "center"
                    text: ""
            MDBoxLayout:
                MDRaisedButton:
                    md_bg_color: app.theme_cls.primary_dark
                    size_hint: (1, 0.35)
                    pos_hint: {"center_x": 0.5 ,"center_y": 0.5 }
                    text: "More info >>"
                    on_press:
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'info'

<InfoScreen>:
    name: 'info'
    desc_image: desc_image
    description: description
    MDGridLayout:
        rows: 4
        padding: 2.5
        MDBoxLayout:
            AsyncImage:
                id: desc_image
                source: "images/description_img.png"
                size: self.texture_size
            MDLabel:
                halign: "center"
                id: description
                text: " "
        MDBoxLayout:
            MDBoxLayout:
                MDLabel:
                    halign: "center"
                    text: "Min"
                MDLabel:
                    halign: "center"
                    id: min_temp
                    text: " "
            MDBoxLayout:
                MDLabel:
                    halign: "center"
                    text: "Max"
                MDLabel:
                    halign: "center"
                    id: max_temp
                    text: " "
        MDBoxLayout:
            MDRaisedButton:
                md_bg_color: app.theme_cls.primary_dark
                text: "  <<  "
                size_hint: (1, 0.35)
                pos_hint: {"center_x": 0.5 ,"center_y": 0.5 }
                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'main'
            MDLabel:
                halign: "center"
                text: " "
